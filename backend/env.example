# Database Configuration
MONGODB_URI=mongodb://localhost:27017/hedy-ai
MONGODB_TEST_URI=mongodb://localhost:27017/hedy-ai-test

# JWT Configuration
JWT_SECRET=your_super_secure_jwt_secret_key_here_make_it_very_long_and_random
JWT_EXPIRE=7d

# Server Configuration
PORT=5000
NODE_ENV=development

# Frontend Configuration
FRONTEND_URL=http://localhost:3000

# AI Configuration
GEMINI_API_KEY=your_gemini_api_key_here

# File Upload Configuration
MAX_FILE_SIZE=50mb
UPLOAD_PATH=uploads/

# Email Configuration (for production)
EMAIL_FROM=noreply@hedyai.com
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_email_password

# Redis Configuration (for session storage in production)
REDIS_URL=redis://localhost:6379

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Security
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Audio Processing
AUDIO_MAX_DURATION=3600
AUDIO_CHUNK_SIZE=1024
SUPPORTED_AUDIO_FORMATS=mp3,wav,m4a,webm
